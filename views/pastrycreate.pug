extends layout 
 
block content 
  h1= title 
 
  form(id='PastryForm', action="/resource/pastries", method="POST", class='justify-content-center p-3 text-center text-light') 
    div.form-group
        label.pastryAttr(for='pastry_flavour' style="font-family: 'Courier New', monospace;color:green; font-size: 38px; text-align: centre;" class="text-success") Pastry flavour
        br
        input#pastry_flavour(type='text', name='pastry_flavour', size="50") 
        br
        br
    div.form-group 
        label.pastryAttr(for='calories' style="font-family: 'Courier New', monospace;color:green; font-size: 38px; text-align: centre;") calories 
        br
        input#calories(type='number', name='calories', size="50") 
        br
        br
    div.form-group 
        label.pastryAttr(for='pastry_shape' style="font-family: 'Courier New', monospace;color:green; font-size: 38px; text-align: centre;") Pastry Shape
        br
        input#pastry_shape(type='text', name='pastry_shape', size="50") 
        br
        br
    input(type="submit") 
 
  script. 
    document.forms['PastryForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 